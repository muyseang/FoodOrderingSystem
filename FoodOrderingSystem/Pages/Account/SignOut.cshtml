@page
@model FoodOrderingSystem.Pages.Account.SignOutModel

@{
    ViewData["Title"] = "Sign Out";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center">
                <div class="mb-4">
                    <i class="fas fa-sign-out-alt text-primary" style="font-size: 4rem;"></i>
                </div>
                <h3 class="mb-3">Sign Out</h3>
                <p class="text-muted mb-4">Are you sure you want to sign out of your account?</p>
                
                <form method="post" class="d-inline">
                    <button type="submit" class="btn btn-primary btn-lg me-3">
                        <i class="fas fa-sign-out-alt me-2"></i>Yes, Sign Out
                    </button>
                </form>
                
                <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-arrow-left me-2"></i>Cancel
                </a>
            </div>
        </div>
    </div>
</div>