@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header Section -->
            <div class="text-center mb-5">
                <div class="privacy-hero mb-4">
                    <i class="fas fa-shield-alt fa-4x text-primary mb-3"></i>
                    <h1 class="display-4 fw-bold text-dark">Privacy Policy</h1>
                    <p class="lead text-muted">Your privacy matters to us. Learn how we protect and handle your information.</p>
                    <small class="text-muted">Last updated: September 26, 2025</small>
                </div>
            </div>

            <!-- Quick Navigation -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i>Quick Navigation</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li><a href="#information-collection" class="text-decoration-none">Information We Collect</a></li>
                                <li><a href="#information-use" class="text-decoration-none">How We Use Information</a></li>
                                <li><a href="#information-sharing" class="text-decoration-none">Information Sharing</a></li>
                                <li><a href="#data-security" class="text-decoration-none">Data Security</a></li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li><a href="#cookies" class="text-decoration-none">Cookies & Tracking</a></li>
                                <li><a href="#your-rights" class="text-decoration-none">Your Rights</a></li>
                                <li><a href="#data-retention" class="text-decoration-none">Data Retention</a></li>
                                <li><a href="#contact" class="text-decoration-none">Contact Us</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Privacy Policy Content -->
            <div class="privacy-content">
                
                <!-- Information Collection -->
                <section id="information-collection" class="mb-5">
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h3 class="mb-0"><i class="fas fa-database me-2"></i>Information We Collect</h3>
                        </div>
                        <div class="card-body">
                            <h5 class="text-primary">Personal Information</h5>
                            <p>When you use our food ordering system, we may collect:</p>
                            <ul class="mb-4">
                                <li><strong>Account Information:</strong> Username, email address, and encrypted password</li>
                                <li><strong>Profile Data:</strong> Name, preferences, and account settings</li>
                                <li><strong>Order Information:</strong> Food items ordered, delivery address, and payment preferences</li>
                                <li><strong>Communication Data:</strong> Messages, reviews, and customer service interactions</li>
                            </ul>

                            <h5 class="text-primary">Technical Information</h5>
                            <ul>
                                <li><strong>Device Information:</strong> Browser type, operating system, and device identifiers</li>
                                <li><strong>Usage Data:</strong> Pages visited, time spent, and interaction patterns</li>
                                <li><strong>Location Data:</strong> IP address and approximate location for delivery purposes</li>
                                <li><strong>Cookies:</strong> Session data and preferences for improved user experience</li>
                            </ul>
                        </div>
                    </div>
                </section>

                <!-- Information Use -->
                <section id="information-use" class="mb-5">
                    <div class="card shadow-sm">
                        <div class="card-header bg-success text-white">
                            <h3 class="mb-0"><i class="fas fa-cogs me-2"></i>How We Use Your Information</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h5 class="text-success">Service Delivery</h5>
                                    <ul>
                                        <li>Process and fulfill your food orders</li>
                                        <li>Manage your account and preferences</li>
                                        <li>Provide customer support</li>
                                        <li>Send order confirmations and updates</li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <h5 class="text-success">Service Improvement</h5>
                                    <ul>
                                        <li>Analyze usage patterns to improve our platform</li>
                                        <li>Personalize your food recommendations</li>
                                        <li>Develop new features and services</li>
                                        <li>Ensure platform security and prevent fraud</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Information Sharing -->
                <section id="information-sharing" class="mb-5">
                    <div class="card shadow-sm">
                        <div class="card-header bg-warning text-dark">
                            <h3 class="mb-0"><i class="fas fa-share-alt me-2"></i>Information Sharing</h3>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                <strong>We never sell your personal information to third parties.</strong>
                            </div>

                            <h5 class="text-warning">Limited Sharing Scenarios</h5>
                            <ul>
                                <li><strong>Service Providers:</strong> Trusted partners who help us deliver food and process payments</li>
                                <li><strong>Legal Requirements:</strong> When required by law or to protect our users' safety</li>
                                <li><strong>Business Transfers:</strong> In case of merger or acquisition (with continued privacy protection)</li>
                                <li><strong>Consent:</strong> When you explicitly give us permission to share specific information</li>
                            </ul>
                        </div>
                    </div>
                </section>

                <!-- Data Security -->
                <section id="data-security" class="mb-5">
                    <div class="card shadow-sm">
                        <div class="card-header bg-danger text-white">
                            <h3 class="mb-0"><i class="fas fa-lock me-2"></i>Data Security</h3>
                        </div>
                        <div class="card-body">
                            <h5 class="text-danger">Security Measures</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <ul>
                                        <li><i class="fas fa-check text-success me-2"></i>Password encryption with BCrypt</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Secure HTTPS connections</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Regular security audits</li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <ul>
                                        <li><i class="fas fa-check text-success me-2"></i>Access controls and monitoring</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Secure database storage</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Regular data backups</li>
                                    </ul>
                                </div>
                            </div>

                            <div class="alert alert-warning mt-3">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <strong>Please note:</strong> This is a demo application. In production, additional security measures would be implemented.
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Cookies -->
                <section id="cookies" class="mb-5">
                    <div class="card shadow-sm">
                        <div class="card-header bg-info text-white">
                            <h3 class="mb-0"><i class="fas fa-cookie-bite me-2"></i>Cookies & Tracking</h3>
                        </div>
                        <div class="card-body">
                            <h5 class="text-info">Cookie Usage</h5>
                            <p>We use cookies and similar technologies to:</p>
                            <ul>
                                <li>Keep you logged in to your account</li>
                                <li>Remember your cart items and preferences</li>
                                <li>Analyze website traffic and usage patterns</li>
                                <li>Provide personalized food recommendations</li>
                            </ul>

                            <div class="mt-3">
                                <h6>Cookie Types:</h6>
                                <span class="badge bg-primary me-2">Essential</span>
                                <span class="badge bg-secondary me-2">Functional</span>
                                <span class="badge bg-success me-2">Analytics</span>
                                <span class="badge bg-warning text-dark">Personalization</span>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Your Rights -->
                <section id="your-rights" class="mb-5">
                    <div class="card shadow-sm">
                        <div class="card-header bg-secondary text-white">
                            <h3 class="mb-0"><i class="fas fa-user-shield me-2"></i>Your Privacy Rights</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h5 class="text-secondary">You Have the Right To:</h5>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item"><i class="fas fa-eye text-primary me-2"></i>Access your personal data</li>
                                        <li class="list-group-item"><i class="fas fa-edit text-success me-2"></i>Update or correct your information</li>
                                        <li class="list-group-item"><i class="fas fa-download text-info me-2"></i>Export your data</li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <h5 class="text-secondary">Additional Rights:</h5>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item"><i class="fas fa-trash text-danger me-2"></i>Delete your account</li>
                                        <li class="list-group-item"><i class="fas fa-ban text-warning me-2"></i>Opt-out of communications</li>
                                        <li class="list-group-item"><i class="fas fa-question text-secondary me-2"></i>Contact us with concerns</li>
                                    </ul>
                                </div>
                            </div>

                            <div class="mt-3">
                                <a href="/Account/Profile" class="btn btn-primary me-2">
                                    <i class="fas fa-user-cog me-1"></i>Manage Your Data
                                </a>
                                <a href="#contact" class="btn btn-outline-secondary">
                                    <i class="fas fa-envelope me-1"></i>Contact Support
                                </a>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Data Retention -->
                <section id="data-retention" class="mb-5">
                    <div class="card shadow-sm">
                        <div class="card-header bg-dark text-white">
                            <h3 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Data Retention</h3>
                        </div>
                        <div class="card-body">
                            <h5 class="text-dark">Retention Periods</h5>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Data Type</th>
                                            <th>Retention Period</th>
                                            <th>Reason</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Account Information</td>
                                            <td>Until account deletion</td>
                                            <td>Service provision</td>
                                        </tr>
                                        <tr>
                                            <td>Order History</td>
                                            <td>7 years</td>
                                            <td>Legal requirements</td>
                                        </tr>
                                        <tr>
                                            <td>Payment Information</td>
                                            <td>As required by payment processors</td>
                                            <td>Fraud prevention</td>
                                        </tr>
                                        <tr>
                                            <td>Usage Analytics</td>
                                            <td>2 years</td>
                                            <td>Service improvement</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Contact Section -->
                <section id="contact" class="mb-5">
                    <div class="card shadow-lg border-primary">
                        <div class="card-header bg-primary text-white">
                            <h3 class="mb-0"><i class="fas fa-envelope me-2"></i>Contact Us About Privacy</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h5 class="text-primary">Get in Touch</h5>
                                    <p>If you have questions about this privacy policy or your personal data:</p>
                                    
                                    <div class="contact-info mb-3">
                                        <p class="mb-2">
                                            <i class="fas fa-envelope text-primary me-2"></i>
                                            <strong>Email:</strong> privacy@foodordering.com
                                        </p>
                                        <p class="mb-2">
                                            <i class="fas fa-phone text-success me-2"></i>
                                            <strong>Phone:</strong> +855 23 123 456
                                        </p>
                                        <p class="mb-0">
                                            <i class="fas fa-map-marker-alt text-danger me-2"></i>
                                            <strong>Address:</strong> Phnom Penh, Cambodia
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <h5 class="text-primary">Response Time</h5>
                                    <p>We strive to respond to all privacy inquiries within:</p>
                                    
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item d-flex justify-content-between">
                                            <span>General Questions</span>
                                            <span class="badge bg-success">24 hours</span>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between">
                                            <span>Data Requests</span>
                                            <span class="badge bg-info">3-5 days</span>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between">
                                            <span>Account Deletion</span>
                                            <span class="badge bg-warning text-dark">7 days</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Footer -->
                <div class="text-center py-4 border-top">
                    <p class="text-muted mb-2">
                        <i class="fas fa-shield-alt text-primary me-2"></i>
                        Your privacy is protected by industry-standard security measures
                    </p>
                    <small class="text-muted">
                        This privacy policy was last updated on September 26, 2025 and is effective immediately.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

